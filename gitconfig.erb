[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
	sw = switch
	rt = restore	
  diverged-diff = "!f() { git diff origin/master...HEAD $@ ;}; f"
  diverged-stat = "!f() { git diff origin/master...HEAD --stat $@; }; f"
  diverged-log = "!f() { git log `git merge-base HEAD origin/master`..HEAD $@ ;}; f"
  diverged-logstat = "!f() { git log --stat `git merge-base HEAD origin/master`..HEAD $@ ;}; f"
  diverged-llog = "!f() { git log `git merge-base HEAD origin/master`..HEAD $@ ;}; f"
  diverged-commit = merge-base HEAD origin/master
  # Inicia un rebase interactivo desde el momento en que la rama divergi√≥ de master
  rrrebase = "!bash -xc \"git rebase -i  `git merge-base HEAD origin/master`\""
  plog = "log --graph --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(blue)<%an>%Creset' --abbrev-commit"
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
	default = simple
